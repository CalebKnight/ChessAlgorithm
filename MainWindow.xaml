<Window
    x:Class="Chess.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Chess"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1000"
    Height="1000"
    mc:Ignorable="d">
    <Grid
        Width="1000"
        Height="1000"
        Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="37*" />
        </Grid.ColumnDefinitions>
        <Canvas
            x:Name="ChessBoard"
            Grid.Column="1"
            Width="800"
            Height="800" Margin="25,100,100,100" />
        <Button x:Name="PlayButton" Grid.Column="1" Content="Play" HorizontalAlignment="Left" Margin="752,10,0,0" VerticalAlignment="Top" Background="#FF51EC27" BorderBrush="Black" Height="71" Width="113" Click="PlayButton_Click"/>

    </Grid>
</Window>
